
@model BookInspector.Models.Catalog.DetailsIndexModel
@{
    ViewBag.Title = @Model.Title;
}

    <div class="container">
        <div class="header clearfix detailHeading">
            <h2 class="text-muted">Details</h2>
        </div>

        <div class="jumbotron">
            <div class="row">
                <div class="col-md-4">
                    <div>
                        <img src="@Model.ImageURL" alt="" height="300" />
                    </div>
                </div>
                <div class="col-md-4">
                    <h4><strong><font color="#5f93e8">@Model.Title</font></strong></h4>

                    <strong>Category: </strong>
                    <p id="itemStatus">@Model.Categories</p>
                    a
                    <strong>Authors: </strong>
                    <p id="itemAuthor">@Model.Authors</p>

                    <strong>Publisher: </strong>
                    <p id="itemStatus">@Model.Publisher</p>

                    <strong>Publish Date: </strong>
                    <p id="itemStatus">@Model.PublishedDate</p>


                    <button type="button" class="btn btn-primary pull-left" data-toggle="modal" data-target="#myModalNormAddBook">
                        Edit Book
                        <span class="glyphicon glyphicon-edit"></span>
                    </button>
                    <br>
                    <br>
                    @if (this.User.IsInRole("Administrator"))
                    {
                        <a asp-controller="Catalog" asp-action="Delete" asp-route-Id="@Model.Id"
                           class="btn btn-primary pull-left">
                            Detele Book
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    }

                    <!-- Modal -->
                    <div class="modal fade" id="myModalNormAddBook" tabindex="-1" role="dialog"
                         aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <button type="button" class="close"
                                            data-dismiss="modal">
                                        <span aria-hidden="true">&times;</span>
                                        <span class="sr-only">Close</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">
                                        Add new Book
                                    </h4>
                                </div>
                                <!-- Modal Body -->
                                <div class="modal-body">
                                    <form asp-controller="Home" asp-action="CreateMovie" method="post" class="create-book">
                                        <div class="form-group">
                                            <label for="movieTitle">Book Title</label>
                                            @*<input asp-for="@Model.Title" type="text" class="form-control"
                                id="create-book-title" />*@
                                        </div>

                                        <div class="form-group">
                                            <label for="movieDirector">Book Publisher</label>
                                            @*<input asp-for="@Model.DirectorName" type="text" class="form-control"
                                id="create-book-director" />*@
                                        </div>

                                        <div class="form-group">
                                            <label for="movieDirector">Book Category (Split by ' ')</label>
                                            @*<input asp-for="@Model.DirectorName" type="text" class="form-control"
                                id="create-book-director" />*@
                                        </div>

                                        <div class="form-group">
                                            <label for="movieDirector">Book Author (Split by ' ')</label>
                                            @*<input asp-for="@Model.DirectorName" type="text" class="form-control"
                                id="create-book-director" />*@
                                        </div>

                                        <button type="submit" class="btn btn-default">Edit Book</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                    <div class="col-md-4">
                        <br>
                        <table>

                            <tr>
                                <td class="itemLabel"><strong>Description: </strong></td>
                            </tr>

                            <tr>
                                <td><h5><font color="#5f93e8"><strong>@Model.Description</strong></font></h5></td>
                            </tr>

                        </table>
                        @{
                            var url = "location.href='" + @Model.PreviewLink + "';";

                        <br>
                        <button type="button" class="btn btn-primary pull-left" onclick=@url>
                            Read online
                        </button>
                        }                      

                    </div>
            </div>
            <br>
        </div>
    </div>



