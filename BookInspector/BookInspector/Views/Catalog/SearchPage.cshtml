
@model BookInspector.Models.Catalog.SearchViewModel

<h2>Search</h2>
<form asp-controller="Catalog" asp-action="SearchResults" method="post">
    <div class="form-group">
        <input asp-for="@Model.Key" class="form-control" />
    </div>

    <div class="form-group">
        <button id="myButton" type="submit" class="btn btn-primary pull-left">
            Search
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </div>
    <br><br>
</form>

