
@model SearchModel

<!DOCTYPE HTML>
<html>
    <head>
        <title>Dimension by HTML5 UP</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <link rel="stylesheet" href="/css/main.css" />
        <noscript><link rel="stylesheet" href="/css/noscript.css" /></noscript>
    </head>
    <body class="is-preload">

        <div id="wrapper">
            <header id="header">
                <div class="content">
                    <div class="inner">
                        <h1>Book Inspector</h1>
                        <p>Discover our full range of books</p>
                    </div>
                </div>
                <nav>
                    <ul>
                        <li><a href="#intro">Books</a></li>
                        <li><a href="#work">Authors</a></li>
                        <li><a href="#about">Category</a></li>
                        <li><a href="#search">Search</a></li>
                    </ul>
                </nav>
                <div class="content">
                    <div class="inner">
                        <p>Made by team Sea Wolves</p>
                    </div>
                </div>
            </header>

            <div id="main">
                <article id="search">
                    <h2 class="major">Enter a book name</h2>

                    <form asp-controller="Home" asp-action="Search" method="get">
                        <div>
                            <input asp-for="@Model.SearchBook" class="submit" />
                        </div>
                        <br>
                        <div>
                            <button type="submit">Search</button>
                        </div>
                    </form>
                </article>
            </div>

        </div>

        <div id="bg"></div>

        <script src="/js/jquery.min.js"></script>
        <script src="/js/browser.min.js"></script>
        <script src="/js/breakpoints.min.js"></script>
        <script src="/js/util.js"></script>
        <script src="/js/main.js"></script>

    </body>
</html>
